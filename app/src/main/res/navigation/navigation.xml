<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.camerax.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_titleFragment_to_cameraActivity"
            app:destination="@id/cameraActivity" />
        <action
            android:id="@+id/action_titleFragment_to_mapsActivity"
            app:destination="@id/mapsActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.camerax.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingFragment_to_titleFragment"
            app:destination="@id/titleFragment" />
    </fragment>
    <activity
        android:id="@+id/cameraActivity"
        android:name="com.example.camerax.CameraActivity"
        android:label="CameraActivity"
        tools:layout="@layout/camera_layout"/>
    <activity
        android:id="@+id/mapsActivity"
        android:name="com.example.camerax.MapsActivity"
        android:label="MapsActivity"
        tools:layout="@layout/activity_map"/>
</navigation>